<Window x:Class="Client.EventLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client" d:DataContext="{d:DesignInstance Type=local:EventLogViewModel}"
        mc:Ignorable="d"
        Title="Журнал событий" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label>From:</Label>
            <DatePicker SelectedDate="{Binding SelectedDateFrom}"></DatePicker>
        </StackPanel>
        <StackPanel  Grid.Row="0" Grid.Column="1">
            <Label>To:</Label>
            <DatePicker SelectedDate="{Binding SelectedDateTo}"></DatePicker>
        </StackPanel>
        <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0" ColumnWidth="*" ItemsSource="{Binding EventLogs}" AutoGenerateColumns="True"/>
    </Grid>
</Window>
